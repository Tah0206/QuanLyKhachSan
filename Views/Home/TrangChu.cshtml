<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title - Hotel Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        body {
            overflow-x: hidden;
        }

        .sidebar {
            height: 100vh;
            background-color: #f8f9fa;
            padding-top: 20px;
        }

            .sidebar .nav-link {
                color: #333;
            }

                .sidebar .nav-link:hover {
                    background-color: #ddd;
                }
    </style>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-md-2 sidebar d-none d-md-block">
                <div class="nav flex-column">
                    <h5 class="px-3">Danh mục</h5>
                    @*Phân quyền sử dụng chức năng*@
                    @{
                        var role = Session["RoleName"] != null ? Session["RoleName"].ToString() : "";
                    }

                    @if (role == "Chủ sở hữu")
                    {
                        <a href="#" class="nav-link">Xem báo cáo</a>
                        <a href="#" class="nav-link">Thống kê</a>
                    }
                    else
                    {
                        <a href="@Url.Action("Index","TongQuan")" class="nav-link">Hiển thị tổng quan</a>
                        <a href="@Url.Action("Index", "Customers")" class="nav-link">Quản lý khách hàng</a>

                        if (role == "admin" || role == "Quản lý")
                        {
                            <a href="@Url.Action("Index", "Staffs")" class="nav-link">Quản lý nhân viên</a>
                            <a href="@Url.Action("Index","Floors")" class="nav-link">Quản lý tầng</a>
                            <a href="@Url.Action("Index","Rooms")" class="nav-link">Quản lý phòng</a>
                        }

                        <a href="@Url.Action("Index","Services")" class="nav-link">Sản phẩm - Dịch vụ</a>

                        if (role == "admin")
                        {
                            <a href="@Url.Action("Index", "Users")" class="nav-link">Quản trị người dùng</a>
                        }
                    }
                    <a href="@Url.Action("Index","Bookings")" class="nav-link">Đặt phòng</a>

                </div>
            </nav>
            <main role="main" class="col-md-10 ms-sm-auto px-4">
                <header class="d-flex justify-content-between align-items-center py-3 border-bottom">
                    <h2>@ViewBag.Title</h2>
                    <div>
                        @if (Session["Username"] != null)
                        {
                            <a href="@Url.Action("Logout", "Auth")" class="btn btn-danger">Đăng xuất</a>
                        }
                        else
                        {
                            <a href="@Url.Action("Login", "Auth")" class="btn btn-primary">Đăng nhập</a>
                        }
                    </div>
                </header>

                <div class="content-area mt-3">
                </div>
            </main>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>





