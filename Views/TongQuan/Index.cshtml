@model List<DoAnQuanLyKhachSan.Models.ViewModel.RoomOverviewViewModel>

@{
    ViewBag.Title = "Tổng quan tình trạng phòng";
}

<head>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</head>

<style>
    .context-menu {
        display: none;
        position: absolute;
        z-index: 1000;
        background-color: #fff;
        border: 1px solid #ccc;
        padding: 8px 0;
        min-width: 150px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.2);
    }

        .context-menu a {
            display: block;
            padding: 8px 16px;
            color: #333;
            text-decoration: none;
        }

            .context-menu a:hover {
                background-color: #f1f1f1;
            }

    .room-icon {
        cursor: pointer;
    }
</style>

<h2 class="mb-4">Hiển thị tổng quan</h2>
@if (TempData["QuickBookingSuccess"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3" role="alert">
        @TempData["QuickBookingSuccess"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@foreach (var tang in Model)
{
    var phongHienThi = tang.Phong
        .Where(p => p.TrangThai == "Trống" || p.TrangThai == "Đang sử dụng")
        .ToList();

    if (!phongHienThi.Any()) { continue; }

    <div class="mb-4 pb-2 border-bottom" style="border-color: #ccc;">
        <h4 class="mt-3">@tang.TenTang</h4>
        <div class="d-flex flex-wrap">
            @foreach (var phong in phongHienThi)
            {
                var iconClass = phong.IsBooked ? "fa-solid fa-house text-danger" : "fa-solid fa-house text-success";

                <div class="text-center m-2 room-icon"
                     data-booking-id="@phong.BookingId"
                     data-room-id="@phong.RoomId"
                     data-room-number="@phong.SoPhong">
                    <i class="@iconClass" style="font-size: 48px;" title="@phong.TrangThai"></i>
                    <div class="room-number">@phong.SoPhong</div>
                </div>
            }
        </div>
    </div>
}

<a href="@Url.Action("TrangChu", "Home")" class="btn btn-secondary me-2">← Quay lại</a>

<!-- Menu chuột phải -->
<div id="customContextMenu" class="context-menu">
    <a href="#" id="bookingLink">Đặt phòng</a>
    <a href="#" id="transferLink">Đổi phòng</a>
    <a href="#" id="paymentLink">Thanh toán</a>
</div>

<!-- Modal chuyển phòng -->
<div class="modal fade" id="transferModal" tabindex="-1" aria-labelledby="transferModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content p-3">
            <div class="modal-header">
                <h5 class="modal-title" id="transferModalLabel">Chuyển phòng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body" id="transferFormContainer"></div>
        </div>
    </div>
</div>

<!-- Modal đặt phòng -->
<div class="modal fade" id="bookingModal" tabindex="-1" aria-labelledby="bookingModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content p-3">
            <div class="modal-header">
                <h5 class="modal-title" id="bookingModalLabel">Đặt phòng</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body" id="bookingModalContent"></div>
        </div>
    </div>
</div>
<!-- Modal hiển thị form thanh toán -->
<div class="modal fade" id="paymentModal" tabindex="-1" aria-labelledby="paymentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content p-3">
            <div class="modal-header">
                <h5 class="modal-title" id="paymentModalLabel">Thanh toán</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Đóng"></button>
            </div>
            <div class="modal-body" id="paymentModalContent">
                <!-- Nội dung form sẽ được load ở đây -->
            </div>
        </div>
    </div>
</div>

    <script>
        const contextMenu = document.getElementById("customContextMenu");
        const bookingLink = document.getElementById("bookingLink");
        const transferLink = document.getElementById("transferLink");
        const paymentLink = document.getElementById("paymentLink");

        let currentBookingId = null;
        let currentRoomId = null;

        // Show context menu on right click
        document.addEventListener("contextmenu", function (e) {
            const roomElement = e.target.closest(".room-icon");

            if (roomElement) {
                e.preventDefault();
                currentBookingId = roomElement.getAttribute("data-booking-id");
                currentRoomId = roomElement.getAttribute("data-room-id");

                bookingLink.href = "#";
                transferLink.href = "#";
                paymentLink.href = "#";

                contextMenu.style.top = `${e.pageY}px`;
                contextMenu.style.left = `${e.pageX}px`;
                contextMenu.style.display = "block";
            } else {
                contextMenu.style.display = "none";
            }
        });

        // Hide menu on click anywhere
        document.addEventListener("click", function () {
            contextMenu.style.display = "none";
        });

        // Handle booking
        bookingLink.addEventListener("click", function (e) {
            e.preventDefault();
            if (currentRoomId) {
                $.get(`/Bookings/QuickBookingForm`, {
                    roomId: currentRoomId
                }).done(function (html) {
                    $("#bookingModalContent").html(html);
                    new bootstrap.Modal(document.getElementById('bookingModal')).show();
                });
            }
        });

        // Handle transfer
        transferLink.addEventListener("click", function (e) {
            e.preventDefault();
            if (currentBookingId && currentRoomId) {
                $.get(`/RoomTransfers/GetTransferForm`, {
                    bookingId: currentBookingId,
                    fromRoomId: currentRoomId
                }).done(function (html) {
                    $("#transferFormContainer").html(html);
                    new bootstrap.Modal(document.getElementById('transferModal')).show();
                });
            }
        });

        // Handle payment
        paymentLink.addEventListener("click", function (e) {
            e.preventDefault();
            if (currentBookingId) {
                loadPaymentForm(currentBookingId); // Gọi API để lấy form
                new bootstrap.Modal(document.getElementById('paymentModal')).show(); // Hiện modal
            } else {
                alert("Không tìm thấy mã đặt phòng để thanh toán.");
            }
        });


        //  Xử lý submit form trong QuickBooking (AJAX)
        $(document).on('submit', '#quickBookingForm', function (e) {
            e.preventDefault(); // Ngăn reload trang

            $.ajax({
                url: $(this).attr('action'),
                type: 'POST',
                data: $(this).serialize(),
                success: function (result) {
                    if ($(result).hasClass('booking-success')) {
                        $('#bookingModal').modal('hide');
                        $('#notificationArea').html('<div class="alert alert-success mt-3">Đặt phòng thành công!</div>');
                        // Reload lại danh sách phòng nếu cần
                        location.reload(); // nếu muốn cập nhật danh sách
                    } else {
                        $('#bookingModalContent').html(result); // render lại form nếu có lỗi
                    }
                },
                error: function () {
                    alert('Đã xảy ra lỗi khi gửi dữ liệu. Vui lòng thử lại.');
                }
            });
        });

        function loadPaymentForm(bookingId) {
            $.get('/Payment/LoadPaymentForm', { bookingId: bookingId }, function (html) {
                $('#paymentModalContent').html(html);
            }).fail(function () {
                $('#paymentModalContent').html('<div class="alert alert-danger">Lỗi khi tải form thanh toán.</div>');
            });
        }
    </script>

