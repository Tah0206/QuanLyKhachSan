@model IEnumerable<DoAnQuanLyKhachSan.Models.Service>

@{
    ViewBag.Title = "Quản lý phòng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2>Quản lý dịch vụ </h2>
        <div>
            <a href="@Url.Action("TrangChu", "Home")" class="btn btn-secondary me-2">← Quay lại</a>
            <a href="@Url.Action("Create", "Services")" class="btn btn-primary">➕ Thêm dịch vụ</a>
        </div>
    </div>

    <table class="table table-bordered table-hover table-striped align-middle">
        <thead class="table-dark">
            <tr>
                <th>Tên sản phẩm - dịch vụ </th>
                <th>Giá</th>
                <th class="text-center">Hành động</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ServiceName</td>
                    <td>@item.Price</td>
                    <td class="text-center">
                        <a href="@Url.Action("Edit", "Services", new { id = item.ServiceId })" class="btn btn-sm btn-warning me-1">✏️ Sửa</a>
                        <a href="@Url.Action("Details", "Services", new { id = item.ServiceId })" class="btn btn-sm btn-info me-1">🔍 Chi tiết</a>
                        <a href="@Url.Action("Delete", "Services", new { id = item.ServiceId })" class="btn btn-sm btn-danger">🗑️ Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
