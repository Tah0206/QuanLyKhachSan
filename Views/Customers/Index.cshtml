@model IEnumerable<DoAnQuanLyKhachSan.Models.Customer>

@{
    ViewBag.Title = "Quản lý khách hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">

<style>
    .search-box {
        position: relative;
        width: 400px;
        margin-bottom: 20px;
    }

        .search-box input {
            border-radius: 50px;
            padding-left: 45px;
            width: 300px;
            height: 45px;
            border: 1px solid #ddd;
            transition: all 0.3s;
        }

            .search-box input:focus {
                border-color: #0d6efd;
                box-shadow: 0 0 8px rgba(13, 110, 253, 0.2);
            }

        .search-box i {
            pointer-events: none;
            font-size: 16px;
        }

    .search-btn {
        position: absolute;
        right: 3px;
        top: 3px;
        height: 39px;
        border-radius: 50px;
        padding: 0 20px;
        font-size: 14px;
    }
</style>
<link rel="stylesheet" href="~/MyCss/CSS_Customers_Index.css" />
<div class="customer-container">
    <div class="customer-header">
        <h2>Danh sách khách hàng</h2>
        <div class="actions">
            <a href="@Url.Action("Create")" class="btn-add">
                <i class="fas fa-plus"></i> Thêm khách hàng
            </a>
        </div>
    </div>

    <form method="get" action="@Url.Action("Index")" class="search-form mb-4 d-flex justify-content-end">
        <div class="search-box position-relative">
            <input type="text" name="search" class="form-control ps-5 pe-4"
                   placeholder="Tìm tên, SĐT, email hoặc username..."
                   value="@Request.QueryString["search"]" />
            <button type="submit" class="btn btn-primary search-btn">Tìm</button>
        </div>
    </form>

    <div class="table-responsive">
        <table class="customer-table">
            <thead>
                <tr>
                    <th>Họ tên</th>
                    <th>Số điện thoại</th>
                    <th>Email</th>
                    <th>CMND/CCCD</th>
                    <th>Địa chỉ</th>
                    <th>Tài khoản</th>
                    <th>Thao tác</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-label="Họ tên">@Html.DisplayFor(modelItem => item.FullName)</td>
                        <td data-label="Số điện thoại">@Html.DisplayFor(modelItem => item.Phone)</td>
                        <td data-label="Email">@Html.DisplayFor(modelItem => item.Email)</td>
                        <td data-label="CMND/CCCD">@Html.DisplayFor(modelItem => item.IdentityNumber)</td>
                        <td data-label="Địa chỉ">@Html.DisplayFor(modelItem => item.Address)</td>
                        <td data-label="Tài khoản">@Html.DisplayFor(modelItem => item.User.Username)</td>
                        <td class="actions">
                            <a href="@Url.Action("Edit", new { id=item.CustomerId })" class="btn-edit" title="Sửa">
                                Sửa
                            </a>
                            <a href="@Url.Action("Delete", new { id=item.CustomerId })" class="btn-delete" title="Xóa">
                                Xóa
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>