@model DoAnQuanLyKhachSan.Models.Payment
@{
    ViewBag.Title = "Thanh toán";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<style>
    .payment-box {
        max-width: 600px;
        margin: 50px auto;
        background: #fff;
        padding: 30px;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.08);
        transition: 0.3s;
    }

        .payment-box:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.12);
        }

        .payment-box h3 {
            color: #0d6efd;
            text-align: center;
            margin-bottom: 20px;
            font-weight: 600;
        }

        .payment-box p {
            font-size: 16px;
            margin-bottom: 6px;
        }

        .payment-box strong {
            color: #333;
        }

    .btn-pay {
        display: block;
        width: 100%;
        padding: 12px;
        border-radius: 10px;
        font-size: 16px;
        font-weight: 500;
        margin-bottom: 10px;
        transition: 0.2s ease-in-out;
    }

        .btn-pay i {
            margin-right: 8px;
        }

        .btn-pay:hover {
            transform: scale(1.03);
            opacity: 0.95;
        }

    .btn-momo {
        background-color: #a50064;
        color: #fff;
    }

        .btn-momo:hover {
            background-color: #c7007a;
            color: #fff;
        }

    .btn-qr {
        background-color: #ffc107;
        color: #212529;
    }

        .btn-qr:hover {
            background-color: #ffca2c;
            color: #000;
        }

    .amount {
        color: #dc3545;
        font-weight: bold;
        font-size: 18px;
    }
</style>

<div class="payment-box">
    <h3><i class="bi bi-credit-card-fill"></i> Thanh Toán Đặt Phòng</h3>
    

    <p><strong>Phòng:</strong> @Model.Booking.Room.RoomNumber</p>
    <p><strong>Khách hàng:</strong> @Model.Booking.Customer.FullName</p>
    <p><strong>Ngày nhận phòng:</strong> @Model.Booking.CheckInDate</p>
    <p><strong>Ngày trả phòng:</strong> @Model.Booking.CheckOutDate</p>
    <p><strong>Số tiền cần thanh toán:</strong> <span class="amount">@String.Format("{0:N0} VNĐ", Model.TotalAmount)</span></p>

    

    <form action="@Url.Action("ConfirmPay", "Payment")" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="paymentId" value="@Model.PaymentId" />
        <button type="submit" class="btn btn-success btn-pay">
            <i class="bi bi-cash-coin"></i> Thanh toán tại quầy
        </button>
    </form>

    <a href="@Url.Action("CreateMomoPayment", "Payment", new { bookingId = Model.BookingId })"
       class="btn btn-momo btn-pay text-decoration-none">
        <i class="bi bi-phone-fill"></i> Thanh toán qua MoMo
    </a>

    <a href="@Url.Action("GenerateBankQr", "Payment", new { bookingId = Model.BookingId })"
       class="btn btn-qr btn-pay text-decoration-none">
        <i class="bi bi-qr-code"></i> Chuyển khoản VietQR
    </a>
</div>
