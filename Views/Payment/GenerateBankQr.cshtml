@{
    ViewBag.Title = "Thanh toán chuyển khoản";
    Layout = "~/Views/Shared/_LayoutClient.cshtml";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">

<style>
    body {
        background-color: #f8f9fa;
    }

    .qr-container {
        max-width: 550px;
        margin: 60px auto;
        background: #fff;
        border-radius: 20px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        padding: 40px 30px;
        text-align: center;
        transition: 0.3s;
    }

        .qr-container:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 25px rgba(0, 0, 0, 0.12);
        }

        .qr-container h2 {
            color: #0d6efd;
            font-weight: 600;
            margin-bottom: 15px;
        }

        .qr-container p {
            font-size: 16px;
            color: #333;
            margin-bottom: 8px;
        }

        .qr-container strong {
            color: #000;
        }

    .qr-amount {
        font-size: 20px;
        font-weight: 700;
        color: #dc3545;
        margin-bottom: 10px;
    }

    .qr-image {
        margin: 20px auto;
        border-radius: 12px;
        border: 2px dashed #dee2e6;
        padding: 12px;
        background: #fff;
        transition: 0.2s;
    }

        .qr-image:hover {
            transform: scale(1.03);
        }

    .btn {
        font-size: 16px;
        font-weight: 500;
        border-radius: 10px;
        padding: 10px 16px;
        margin: 4px;
        transition: 0.2s;
    }

        .btn i {
            margin-right: 6px;
        }

        .btn:hover {
            transform: scale(1.05);
        }
</style>

<div class="qr-container">
    <h2><i class="bi bi-qr-code"></i> Quét mã QR để thanh toán</h2>
    <p><strong>Số tiền cần thanh toán:</strong></p>
    <p class="qr-amount">@String.Format("{0:N0} VNĐ", ViewBag.Amount)</p>
    <p><strong>Nội dung chuyển khoản:</strong> @ViewBag.Info</p>

    <div class="qr-image">
        <img src="@ViewBag.QrUrl" alt="QR thanh toán" class="img-fluid" style="max-width:300px;">
    </div>

    <div class="mt-4">
        <a href="@Url.Action("Pay", "Payment", new { bookingId = ViewBag.BookingId })"
           class="btn btn-secondary">
            <i class="bi bi-arrow-left-circle"></i> Quay lại
        </a>

        <a href="@Url.Action("TrangChuNguoiDung", "Home")"
           class="btn btn-success text-white">
            <i class="bi bi-check-circle"></i> Đã thanh toán
        </a>
    </div>
</div>
