@model DoAnQuanLyKhachSan.Models.Payment

<div class="card p-3">
    <p><strong>Khách hàng:</strong> @Model.Booking.Customer.FullName</p>
    <p><strong>Phòng:</strong> @Model.Booking.Room.RoomNumber</p>
    <p><strong>Ngày nhận:</strong> @Model.Booking.CheckInDate</p>
    <p><strong>Ngày trả:</strong> @Model.Booking.CheckOutDate)</p>
    <p><strong>Số tiền cần thanh toán:</strong> <span class="text-danger">@String.Format("{0:N0} VNĐ", Model.TotalAmount)</span></p>

    <div class="mt-3">
        <button class="btn btn-success">Thanh toán tại quầy</button>
        <button class="btn btn-primary">Thanh toán qua MoMo</button>
        <button class="btn btn-warning">Chuyển khoản VietQR</button>
    </div>
</div>
