@model DoAnQuanLyKhachSan.Models.Floor
@{
    ViewBag.Title = "Thêm Tầng Mới";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/MyCss/CSS_All_Create.css" rel="stylesheet" />

<div class="user-create-container">
    <div class="form-card">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <div class="form-header">
                    <h4>@ViewBag.Title</h4>
                </div>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(model => model.FloorName, "Tên tầng", htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.FloorName, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập tên tầng" } })
                    @Html.ValidationMessageFor(model => model.FloorName, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    <button type="submit" class="btn-submit">
                        <i class="fas fa-save"></i> Thêm tầng
                    </button>
                </div>
            </div>
        }

        <a href="@Url.Action("Index")" class="btn-back">
            <i class="fas fa-arrow-left"></i> Quay lại danh sách
        </a>
    </div>
</div>