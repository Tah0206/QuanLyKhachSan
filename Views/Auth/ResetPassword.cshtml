@model DoAnQuanLyKhachSan.Models.ViewModel.ResetPasswordViewModel

@{
    ViewBag.Title = "Đặt lại mật khẩu";
    Layout = null; /* bỏ layout để CSS tự hiển thị */
}

@* Import font + CSS *@
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Poppins&display=swap">
<link rel="stylesheet" href="~/MyCss/CSS_Auth.css" />

<div class="background">
    <div class="home">
        <div class="login">
            <h2>Đặt lại mật khẩu</h2>

            @using (Html.BeginForm("ResetPassword", "Auth", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Email)
                @Html.HiddenFor(m => m.Token)

                <div class="input">
                    @Html.PasswordFor(m => m.NewPassword, new { @class = "input1", placeholder = "Mật khẩu mới" })
                    @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                </div>

                <div class="input">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "input1", placeholder = "Xác nhận mật khẩu" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                </div>

                <div class="button">
                    <button type="submit">Đổi mật khẩu</button>
                </div>

                <div class="sign-up">
                    <p>Quay lại <a href="@Url.Action("Login","Auth")">Đăng nhập</a></p>
                </div>
            }
        </div>
    </div>
</div>
