@model DoAnQuanLyKhachSan.Models.ViewModel.ForgotPasswordViewModel

@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title</title>

    <!-- Font & CSS -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/MyCss/CSS_Auth.css" />
</head>
<body>
    <div class="background">
        <div class="home">
            <div class="login">
                <h2>Quên mật khẩu</h2>

                @using (Html.BeginForm("ForgotPassword", "Auth", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="input">
                        @Html.TextBoxFor(m => m.Email, new
                        {
                            @class = "input1",
                            placeholder = "Nhập email đã đăng ký",
                            required = "required"
                        })
                        <i class="fas fa-envelope"></i>
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="button">
                        <button type="submit">Gửi email đặt lại mật khẩu</button>
                    </div>

                    <div class="sign-up">
                        <p>Trở lại @Html.ActionLink("Đăng nhập", "Login", "Auth")</p>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Font Awesome for envelope icon -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css"
          integrity="sha512-dymI6F7Tj6z1gFpSB7IjlPVXVkLZJSe+nF1jzXG07z1E+bO1ylXKkWZsxyDdx3XYIJ6QEzjgq3Xy5m+8Q9nZaw=="
          crossorigin="anonymous" referrerpolicy="no-referrer" />
</body>
</html>
