@model DoAnQuanLyKhachSan.Models.Staff

@{
    ViewBag.Title = "Chỉnh sửa Nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="~/MyCss/CSS_All_Edit.css" />

<div class="delete-container">
    <div class="delete-card">
        <div class="delete-header">
            <h3>@ViewBag.Title</h3>
        </div>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="delete-details">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.StaffId)

                <div class="detail-row">
                    <span class="detail-label">@Html.DisplayNameFor(model => model.UserId)</span>
                    <div class="detail-value">
                        @Html.DropDownList("UserId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UserId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="detail-row">
                    <span class="detail-label">@Html.DisplayNameFor(model => model.Phone)</span>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="detail-row">
                    <span class="detail-label">@Html.DisplayNameFor(model => model.Address)</span>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="detail-row">
                    <span class="detail-label">@Html.DisplayNameFor(model => model.Gender)</span>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.Gender, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Gender, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="detail-row">
                    <span class="detail-label">@Html.DisplayNameFor(model => model.BirthDate)</span>
                    <div class="detail-value">
                        @Html.EditorFor(model => model.BirthDate, new { htmlAttributes = new { @class = "form-control", type = "date" } })
                        @Html.ValidationMessageFor(model => model.BirthDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="delete-actions">
                    <button type="submit" class="btn-delete" style="background-color: var(--primary-color)">
                        <i class="fas fa-save"></i> Lưu thay đổi
                    </button>
                    <a href="@Url.Action("Index")" class="btn-cancel">
                        <i class="fas fa-arrow-left"></i> Quay lại
                    </a>
                </div>
            </div>
        }
    </div>
</div>